# Trading System Environment Configuration
# Copy to .env and fill in values
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ──────────────────────────────────────────────────────────────────────────
# System Mode
# ──────────────────────────────────────────────────────────────────────────
TRADING_MODE=paper  # backtest | paper | live
TRADING_MARKET=crypto  # kr | us | crypto

# ──────────────────────────────────────────────────────────────────────────
# NATS JetStream
# ──────────────────────────────────────────────────────────────────────────
NATS_URL=nats://localhost:4222

# ──────────────────────────────────────────────────────────────────────────
# PostgreSQL
# ──────────────────────────────────────────────────────────────────────────
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=trading
POSTGRES_PASSWORD=trading_dev
POSTGRES_DB=trading_db
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ──────────────────────────────────────────────────────────────────────────
# QuestDB
# ──────────────────────────────────────────────────────────────────────────
QUESTDB_HOST=localhost
QUESTDB_HTTP_PORT=9000
QUESTDB_ILP_PORT=9009
QUESTDB_PG_PORT=8812

# ──────────────────────────────────────────────────────────────────────────
# Redis
# ──────────────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ──────────────────────────────────────────────────────────────────────────
# Binance API (Crypto)
# ──────────────────────────────────────────────────────────────────────────
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
BINANCE_TESTNET=true  # Use testnet for paper trading

# ──────────────────────────────────────────────────────────────────────────
# Risk Controls
# ──────────────────────────────────────────────────────────────────────────
MAX_DRAWDOWN_PCT=10.0  # Maximum account drawdown percentage
MAX_POSITION_SIZE_PCT=5.0  # Maximum position size per symbol
DAILY_LOSS_LIMIT_PCT=3.0  # Daily loss limit percentage

# ──────────────────────────────────────────────────────────────────────────
# Fill Logic Parameters
# ──────────────────────────────────────────────────────────────────────────
SLIPPAGE_BPS_CRYPTO=10  # Basis points slippage for crypto
SLIPPAGE_BPS_KR=5  # Basis points slippage for KR stocks
SLIPPAGE_BPS_US=3  # Basis points slippage for US stocks
MIN_LATENCY_MS=50  # Minimum simulated latency in milliseconds

# ──────────────────────────────────────────────────────────────────────────
# Logging
# ──────────────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
LOG_FORMAT=json  # json | text
